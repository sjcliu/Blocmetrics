<h1>My Registered Applications</h1>

<%= link_to "New Application", new_registered_application_path(@application), class: 'btn btn-success' %>

<table class="table table-bordered">
  <tbody>
<% @applications.each do |application| %>

      <tr>
        <td class="col-md-6"><%= link_to application.title, application %></td>
        <td class="col-md-4"><%= application.url %></td>
        <td class="col-md-1"><%= link_to "Edit", edit_registered_application_path(application)%></td>
        <td class="col-md-1"><%= link_to "Delete", application, method: :delete, data: {confirm: 'Are you sure you want to delete this application?'} %></td>
      </tr>
    </div>

<% end %>
</tbody>
</table>
